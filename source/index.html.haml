%html
  %head
    %title Product Science | Cleanweb Product Development
    %meta{ 'name' => 'viewport', 'content' => 'width=device-width, initial-scale=1.0'}
    %meta{ 'description' => 'viewport', 'content' => 'Product Science - Cleanweb Product Development'}

    = stylesheet_link_tag 'pure'
    = stylesheet_link_tag 'grids-responsive'
    = stylesheet_link_tag 'base'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Lato:300,400,700'
